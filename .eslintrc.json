
{
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es6": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-console": "off",
        "strict": ["error", "global"],
        "curly": "warn",
        "additional-typescript-only-rule": "off",
        "no-unused-vars": "off",
        "@typescript-eslint/restrict-plus-operands": "off",
        "no-undef": "off",
        "no-extra-semi": "off"



    }
}


